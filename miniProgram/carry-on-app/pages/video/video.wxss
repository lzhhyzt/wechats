/* pages/video/video.wxss */
@import "/templates/loading/loading-template.wxss";

.swiperList {
  margin-bottom: 20rpx;
}

swiper {
  width: 100%;
  height: 400rpx;
}

swiper image {
  width: 100%;
  height: 400rpx;
}

.swiper-title {
  position: absolute;
  left: 50%;
  bottom: 70rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  transform: translateX(-50%);
}

.videoList {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.video {
  position: relative;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  width: 94%;
  border-bottom: 2px solid #cdcdcd;
}

.video-title {
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.video-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.video-cover {
  width: 100%;
  height: 400rpx;
}

.video-play {
  position: absolute;
  width: 81rpx;
  height: 81rpx;
  left: 50%;
  top: 56%;
  transform: translateX(-50%) translateY(-30%);
}