@import "../movie/movie-template.wxss";

.movie-list-container {
  display: flex;
  flex-direction: column;
  background-color: #fff;
}

.inner-container {
  margin: 0 auto 20rpx;
}

.movie-head {
  padding: 30rpx 20rpx 28rpx;
}

.movie-slogen {
  font-size: 24rpx;
}

.movie-more {
  float: right;
}

.movie-more-text {
  vertical-align: middle;
  margin-right: 10rpx;
  color: #1f4ba5;
}

.movie-more-img {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

.movies-containers {
  display: flex;
  flex-direction: row;
}
